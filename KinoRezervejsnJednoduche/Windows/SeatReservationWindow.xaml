<Window x:Class="KinoRezervejsnJednoduche.Windows.SeatReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KinoRezervejsnJednoduche.Windows"
        mc:Ignorable="d"
        Title="SeatReservationWindow" Height="450" Width="800">
	<StackPanel Width="400" Margin="20">
		<Label 
			x:Name="Label"	
			FontSize="24"
		/>

		<!-- Forename -->
		<Label
			FontSize="14"
			HorizontalAlignment="Left" 
			Content="Forename"
			Margin="0"
		/>
		<TextBox 
			Margin="0 0 0 10"
			x:Name="ForenameInput"
		/>
		
		<!-- Surname -->
		<Label
			FontSize="14"
			HorizontalAlignment="Left" 
			Content="Surname"
			Margin="0"
		/>
		<TextBox 
			x:Name="SurnameInput"
		/>
		
		<!-- Email -->
		<Label
			FontSize="14"
			HorizontalAlignment="Left" 
			Content="E-mail"
			Margin="0"
		/>
		<TextBox 
			x:Name="EmailInput"
		/>
		
		<!-- Submit -->
		<Button
			Width="80"
			Margin="0 25 0 0"
			Content="Submit"
			Click="SubmitForm"
		/>
		
		<!-- Error Box -->
		<TextBlock
			x:Name="ErrorBox"
			Margin="10"
			TextAlignment="Center"
			Foreground="Red"
		/>
	</StackPanel>
</Window>
