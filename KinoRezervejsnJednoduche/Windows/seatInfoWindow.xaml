<Window x:Class="KinoRezervejsnJednoduche.Windows.seatInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:KinoRezervejsnJednoduche.Windows"
        mc:Ignorable="d"
        Title="seatInfoWindow" Height="450" Width="800">
	
	<StackPanel Width="400" Margin="20">
		<Label 
			x:Name="Label"	
			FontSize="24"
		/>

		<!-- Forename -->
		<Label
			FontSize="14"
			HorizontalAlignment="Left" 
			Content="Forename"
			Margin="0"
		/>
		<TextBox 
			Margin="0 0 0 10"
			x:Name="ForenameInput"
		/>
		
		<!-- Surname -->
		<Label
			FontSize="14"
			HorizontalAlignment="Left" 
			Content="Surname"
			Margin="0"
		/>
		<TextBox 
			x:Name="SurnameInput"
		/>
		
		<!-- Email -->
		<Label
			FontSize="14"
			HorizontalAlignment="Left" 
			Content="E-mail"
			Margin="0"
		/>
		<TextBox 
			x:Name="EmailInput"
		/>
	</StackPanel>
</Window>
